@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>

<h1>Clients:</h1>

@if (@Model.Count == 0)
{
  <h3>No Clients Have Been Added!</h3>
} 

@foreach (Client client in Model)
{
<h4>@client.Name</h4>
}

<button class="btn btn-outline-dark">@Html.ActionLink("Add New Client", "New")</button>