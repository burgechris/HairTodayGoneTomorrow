@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>  

@if (@Model.Count == 0)
{
  <h4>No Stylists Have Been Added.</h4>
}

@foreach (Stylist stylist in Model)
{
  <li><button class="btn btn-outline-dark">@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId})</button></li>
}

<button class="btn btn-outline-dark">@Html.ActionLink("Add A New Stylist", "New", "Stylist")</button>
<button class="btn btn-outline-dark">@Html.ActionLink("Home", "Index", "Home")</button>