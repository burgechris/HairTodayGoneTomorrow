@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<h3>Add A New Stylist</h3>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.Specialty)
    @Html.TextBoxFor(model => model.Specialty)

    <input type="submit" value="Add Stylist" class="btn btn-outline-dark"/>
}

<button class="btn btn-outline-dark">@Html.ActionLink("See Stylists", "Index", "Stylist")</button>